<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6"><i class="fas fa-user-plus text-success me-2"></i>Add New User</h1>
    <a href="/users" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to User List
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-4">
        <form action="/users" method="POST">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="username" class="form-label fw-semibold"><i class="fas fa-user-tie me-1"></i> Username</label>
                    <input type="text" class="form-control form-control-lg" id="username" name="username" value="<%= typeof username !== 'undefined' ? username : '' %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="email" class="form-label fw-semibold"><i class="fas fa-at me-1"></i> Email</label>
                    <input type="email" class="form-control form-control-lg" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label fw-semibold"><i class="fas fa-key me-1"></i> Password</label>
                <input type="password" class="form-control form-control-lg" id="password" name="password" required>
            </div>
            
            <div class="mb-3">
                <label for="role" class="form-label fw-semibold"><i class="fas fa-user-tag me-1"></i> Role</label>
                <select class="form-select form-select-lg" id="role" name="role">
                    <option value="user" <%= (typeof role !== 'undefined' && role === 'user') ? 'selected' : '' %>>User</option>
                    <option value="admin" <%= (typeof role !== 'undefined' && role === 'admin') ? 'selected' : '' %>>Admin</option>
                </select>
            </div>

            <hr class="my-4">

            <div class="d-flex justify-content-end">
                <a href="/users" class="btn btn-light btn-lg me-2"><i class="fas fa-times me-1"></i> Cancel</a>
                <button type="submit" class="btn btn-success btn-lg fw-bold"><i class="fas fa-check me-1"></i> Create User</button>
            </div>
        </form>
    </div>
</div>