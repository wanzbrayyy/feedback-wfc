<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6"><i class="fas fa-user-edit text-primary me-2"></i>Edit User: <span class="fw-bold"><%= user.username %></span></h1>
    <a href="/users" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to User List
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-4">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="username" class="form-label fw-semibold"><i class="fas fa-user-tie me-1"></i> Username</label>
                    <input type="text" class="form-control form-control-lg" id="username" name="username" value="<%= typeof currentUsername !== 'undefined' ? currentUsername : user.username %>" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="email" class="form-label fw-semibold"><i class="fas fa-at me-1"></i> Email</label>
                    <input type="email" class="form-control form-control-lg" id="email" name="email" value="<%= typeof currentEmail !== 'undefined' ? currentEmail : user.email %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="role" class="form-label fw-semibold"><i class="fas fa-user-tag me-1"></i> Role</label>
                <select class="form-select form-select-lg" id="role" name="role">
                    <option value="user" <%= (typeof currentRole !== 'undefined' ? currentRole : user.role) === 'user' ? 'selected' : '' %>>User</option>
                    <option value="admin" <%= (typeof currentRole !== 'undefined' ? currentRole : user.role) === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>
            </div>

            <div class="mb-3">
                <div class="form-check form-switch form-check-lg">
                    <input class="form-check-input" type="checkbox" role="switch" id="isActive" name="isActive" <%= user.isActive ? 'checked' : '' %>>
                    <label class="form-check-label fw-semibold" for="isActive"><i class="fas fa-power-off me-1"></i> User Active</label>
                </div>
            </div>
            
            <div class="alert alert-warning mt-3">
                <i class="fas fa-exclamation-triangle me-1"></i> Password update is handled separately or omitted for this example. To change password, implement a dedicated "Change Password" feature.
            </div>

            <hr class="my-4">

            <div class="d-flex justify-content-end">
                <a href="/users" class="btn btn-light btn-lg me-2"><i class="fas fa-times me-1"></i> Cancel</a>
                <button type="submit" class="btn btn-primary btn-lg fw-bold"><i class="fas fa-save me-1"></i> Save Changes</button>
            </div>
        </form>
    </div>
</div>